{
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/api/sitemap" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "api/sitemap.ts": {
      "memory": 1024,
      "maxDuration": 10,
      "runtime": "nodejs22.11",
      "includeFiles": "api/**/*.ts"
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
